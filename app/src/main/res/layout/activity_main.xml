<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- When you tap on the ImageView inside Android Studio preview window,
    you will see an empty space from top and bottom of the ImageView.
     You can fix that by using android:scaleType="centerCrop"
     which allow the image to fill the remaining space. -->

    <ImageView
        android:id="@+id/eiffelview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/eiffel" />

    <TextView
        android:id="@+id/TitelTV"
        android:layout_below="@+id/eiffelview"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Titel" />

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TitelTV"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:text="@string/description" />


</RelativeLayout>